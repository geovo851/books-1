<% provide(:articles, 'active') %>
<% provide(:title, 'Books') %>

<div class="container-fluid"> 
  <div class="row">

    <%= render 'shared/side_bar' %>
    <div class="col-md-10">
      <div class="page-header">
        <h2 class="books-header">Books</h2>
      </div>
      <% if permitted_to? :new, :books %>
        <div class="add-book">
          <%= button_to new_book_path, method: :get, class: 'btn btn-primary' do %>
            <span class="glyphicon glyphicon-plus"></span>
            Add book
          <% end %>
        </div>
      <% end %>

      <% if @books.empty? %>
        <b>No books</b>
      <% else %>

        <div class="table-responsive">
          <table class="table ">
            <tbody id="books">
              <%= render partial: "book", collection: @books, as: :book %>
            </tbody>
          </table>
        </div>
        <div id="paginator", class="paginate-centre"><%= paginate @books, remote: true %></div>
      <% end %>
    </div>
  </div>
</div>